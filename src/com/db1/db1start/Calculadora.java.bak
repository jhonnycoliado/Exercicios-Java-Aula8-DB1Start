package com.db1.db1start;

public class Calculadora {
	
	
	public int somar(int n1, int n2) {
		return n1+n2;
	}
	
	public int subtrair(int n1, int n2) {
		return n1-n2;
	}
	
	public int mult(int n1, int n2) {
		return n1*n2;
	}
	
	public int div(int n1, int n2) {
		return n1 / n2;
	}
	
	public boolean par(int n1) {
		if ((n1 % 2) == 0) {
			return true;
		}
		else return false;
	}
	
	public int maior(int n1, int n2) {
		if (n1 == n2) {
			return 0;
		}
		if (n1 > n2) {
			return n1;
		}
		else return n2;
	}
	
	public int calcImpar(int n1) {
		if (n1 >= 100) {
			return 0;
		}
		int totalImpar = 0;
		for (int i = n1; i < 100; i++) {
			if ((i % 2) != 0) {
				totalImpar++;
			}
		}
		return totalImpar;
	}
	
	public double menor(int n1, int n2) {
		if (n1 == n2) {
			return 0;
		}
		if(n1 < n2) {
			return n1;
		}
		else return n2;
	}
	
	public double menorTres(double n1, double n2, double n3) {
		if (n1 < n2 && n1 < n3) {
			return n1;
		}
		if (n2 < n1 && n2 < n3) {
			return n2;
		}
		else return n3;
	}
	
	public double mediaTres(double n1, double n2, double n3) {
		double total = n1+n2+n3;
		return total/3;
	}
	
	public double areaTriangulo(double base, double altura) {
		return (base*altura)/2;
	}

}
